@model UrunKMVCWebUI.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>

    .field-validation-error{color:#f00;}
    .field-validation-valid{display:none;}
    .input-validation-error{border:1px solid #f00; background-color:#fee;}
    .validation-summary-errors{font-weight:bold; color:#f00;}
    .validation-summary-valid{display:none;}

</style>

<div class="container pb-5 mt-5">

    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Sipariş bilgilerinizi giriniz.</p>
            <hr />

            @using (Html.BeginForm())
            {             
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.FullName, "",new {@class= "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Tanımı</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdresBasligi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Adres, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Sehir, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Semt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Mahalle, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.PostaKodu, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                       <button type="submit" class="btn btn-success">Devam Et</button>
                    </div>
                </div>
            }
        </div>

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

